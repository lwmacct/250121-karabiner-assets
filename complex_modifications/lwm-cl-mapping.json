{
  "title": "lwm-cl-mapping",
  "rules": [
    {
      "description": "lwm-cl-mapping ~ 按键映射",
      "manipulators": [
        {
          "description": "cl+b (执行 control+b 动作)",
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "b",
              "modifiers": ["left_control"]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_cl_mode",
              "value": 1
            }
          ]
        },
        {
          "description": "cl+; (tmux 上一个窗口: Ctrl+B p)",
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "b",
              "modifiers": ["left_control"]
            },
            {
              "key_code": "p"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_cl_mode",
              "value": 1
            }
          ]
        },
        {
          "description": "cl+' (tmux 下一个窗口: Ctrl+B n)",
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "b",
              "modifiers": ["left_control"]
            },
            {
              "key_code": "n"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_cl_mode",
              "value": 1
            }
          ]
        },
        {
          "description": "cl+[ (tmux 上方窗格: Ctrl+B ↑)",
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "b",
              "modifiers": ["left_control"]
            },
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_cl_mode",
              "value": 1
            }
          ]
        },
        {
          "description": "cl+] (tmux 下方窗格: Ctrl+B ↓)",
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "b",
              "modifiers": ["left_control"]
            },
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_cl_mode",
              "value": 1
            }
          ]
        }
      ]
    }
  ]
}
