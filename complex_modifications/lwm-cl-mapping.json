{
  "title": "lwm-cl-mapping",
  "rules": [
    {
      "description": "lwm-cl-mapping ~ 按键映射",
      "manipulators": [
        {
          "description": "cl+b (执行 control+b 动作)",
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "b",
              "modifiers": ["left_control"]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_caps_lock",
              "value": 1
            }
          ]
        },
        {
          "description": "cl+space+. (tmux 下一个窗口: Ctrl+B n)",
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "b",
              "modifiers": ["left_control"]
            },
            {
              "key_code": "n"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_caps_lock",
              "value": 2
            }
          ]
        },
        {
          "description": "cl+space+, (tmux 上一个窗口: Ctrl+B p)",
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "b",
              "modifiers": ["left_control"]
            },
            {
              "key_code": "p"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_caps_lock",
              "value": 2
            }
          ]
        }
      ]
    }
  ]
}
