{
  "title": "lwm-cl-caps_lock",
  "rules": [
    {
      "description": "(lwm-cl-caps_lock) 必须导入这个",
      "manipulators": [
        {
          "description": "第一层 + Space 按住进入第二层",
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 1
          },
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "lwm_caps_lock",
                "value": 2
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "lwm_caps_lock",
                "value": 0
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_caps_lock",
              "value": 1
            }
          ]
        },
        {
          "description": "CapsLock 双击进入第二层",
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 1
          },
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "lwm_caps_lock",
                "value": 2
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "lwm_caps_lock",
                "value": 0
              }
            },
            {
              "set_variable": {
                "name": "lwm_double_tap_window",
                "value": 0
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_double_tap_window",
              "value": 1
            }
          ]
        },
        {
          "description": "CapsLock 单击进入第一层",
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 1,
            "basic.to_delayed_action_delay_milliseconds": 300
          },
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "lwm_caps_lock",
                "value": 1
              }
            },
            {
              "set_variable": {
                "name": "lwm_double_tap_window",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "lwm_caps_lock",
                "value": 0
              }
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "lwm_double_tap_window",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "lwm_double_tap_window",
                  "value": 0
                }
              }
            ]
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_double_tap_window",
              "value": 0
            }
          ]
        }
      ]
    }
  ]
}
