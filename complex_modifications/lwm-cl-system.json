{
  "title": "lwm-cl-system",
  "rules": [
    {
      "description": "(lwm-cl-system) 系统控制快捷键",
      "manipulators": [
        {
          "description": "cl+space+= (音量增加)",
          "type": "basic",
          "from": {
            "key_code": "equal_sign",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "volume_increment"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_caps_lock",
              "value": 3
            }
          ]
        },
        {
          "description": "cl+space+- (音量减少)",
          "type": "basic",
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "volume_decrement"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_caps_lock",
              "value": 3
            }
          ]
        },
        {
          "description": "cl+space+0 (静音)",
          "type": "basic",
          "from": {
            "key_code": "0",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "mute"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_caps_lock",
              "value": 3
            }
          ]
        },
        {
          "description": "cl+space+p (播放/暂停)",
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "play_or_pause"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_caps_lock",
              "value": 3
            }
          ]
        },
        {
          "description": "cl+space+n (下一曲)",
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "fastforward"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_caps_lock",
              "value": 3
            }
          ]
        },
        {
          "description": "cl+space+b (上一曲)",
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "rewind"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_caps_lock",
              "value": 3
            }
          ]
        },
        {
          "description": "cl+space+. (亮度增加)",
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "display_brightness_increment"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_caps_lock",
              "value": 3
            }
          ]
        },
        {
          "description": "cl+space+, (亮度减少)",
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "display_brightness_decrement"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_caps_lock",
              "value": 3
            }
          ]
        }
      ]
    }
  ]
}
