{
  "title": "lwm-cl-tab-toggle",
  "rules": [
    {
      "description": "(lwm-cl-tab-toggle) Tab 切换",
      "manipulators": [
        {
          "description": "下一个",
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["left_control"]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_caps_lock",
              "value": 1
            }
          ]
        },
        {
          "description": "上一个",
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["left_control", "left_shift"]
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "lwm_caps_lock",
              "value": 1
            }
          ]
        }
      ]
    }
  ]
}
